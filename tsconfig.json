{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "target": "ESNext",
        "module": "CommonJS",
        "paths": {
            "*": ["./src/*"]
        },
        "jsx": "react-jsx",
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "*.ts","*.tsx"],
    "exclude": ["node_modules"]
}
